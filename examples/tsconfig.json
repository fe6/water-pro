{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "node"],
    "paths": {
      "@@*": ["../components/*"]
    }
  },
  "include": ["../components/**/*.ts", "../components/**/*.d.ts", "../components/**/*.tsx", "../components/**/*.vue"],
  "exclude": ["node_modules", "dist"]
}
